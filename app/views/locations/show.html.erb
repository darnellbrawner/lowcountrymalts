<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:club_id) %>:</strong></dt>
  <dd><%= @location.club_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @location.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @location.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line1) %>:</strong></dt>
  <dd><%= @location.address_line1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line2) %>:</strong></dt>
  <dd><%= @location.address_line2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @location.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state_province) %>:</strong></dt>
  <dd><%= @location.state_province %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @location.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country_id) %>:</strong></dt>
  <dd><%= @location.country_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @location.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @location.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:atn1) %>:</strong></dt>
  <dd><%= @location.atn1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:atv1) %>:</strong></dt>
  <dd><%= @location.atv1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:atn2) %>:</strong></dt>
  <dd><%= @location.atn2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:atv2) %>:</strong></dt>
  <dd><%= @location.atv2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resource_type) %>:</strong></dt>
  <dd><%= @location.resource_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resource_id) %>:</strong></dt>
  <dd><%= @location.resource_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @location.active %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              locations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_path(@location), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_path(@location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
